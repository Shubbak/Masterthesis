@article{macias_practical_1988,
	title = {A practical solution to the “unknown normalization” problem},
	volume = {33},
	doi = {10.1002/qua.560330404},
	abstract = {We analyze the theoretical basis of a procedure to determine an unknown normalization factor in discretized wave functions, which we have successfully used in a series of calculations of resonance widths for atomic and molecular systems. By reducing this determination to that of a suitable interpolation function for the energy eigenvalues, the problem is easily solved when atomic basis sets are chosen according to simple rules. Illustrations of our procedure are presented for atomic, molecular, and model systems; renormalized wave functions are compared with the exact ones for these model systems. The resulting method of renormalized continuum wave functions has a wide range of application in the study of long‐lived quasibound states (predissociation, autoionization, photoionization, unimolecular reactions, etc.). Copyright © 1988 John Wiley \& Sons, Inc.},
	pages = {279--300},
	number = {4},
	journaltitle = {International Journal of Quantum Chemistry},
	author = {Macías, A. and Martín, F. and Riera, A. and Yáañez, M.},
	date = {1988},
}

@article{abgrall_effect_1987,
	title = {Effect of rotational coupling on emission probabilities of Lyman and Werner band systems of the vacuum ultraviolet spectrum of H2},
	volume = {87},
	doi = {10.1063/1.453178},
	abstract = {Ratios of emission probabilities of rotational lines of the Lyman and Werner band systems, B 1Σu+ → X 1Sg+ and C 1Πu → X 1Σg+, respectively, are calculated by different methods. These theoretical ratios are compared to the experimental intensity ratios of about a hundred lines selected from a vacuum ultraviolet emission spectrum whose intensity is investigated for the first time at high resolution. The computation permits to compare two ways of solving a system of two coupled equations with discrete eigenvalues. In most cases the effect of the mutual rotational perturbation between B and C states is found significant on the ratio of P and R line intensities. Ambiguity in labeling a few B and C levels is discussed. © 1987 American Institute of Physics.},
	pages = {2036--2044},
	number = {4},
	journaltitle = {The Journal of Chemical Physics},
	author = {Abgrall, Hervé and Launay, Françoise and Roueff, Evelyne and Roncin, Jean Yves},
	date = {1987},
}

@article{noll_fluorescent_1987,
	title = {Fluorescent dissociation of selectively excited rotational-vibrational states of h2 (b, c) molecules},
	volume = {36},
