@article{stephens_spontaneous_1972,
	title = {Spontaneous radiative dissociation in molecular hydrogen},
	volume = {12},
	doi = {10.1016/0022-4073(72)90168-9},
	abstract = {The spontaneous radiative dissociations of the discrete vibrational levels of the B1Σ+u electronic states of H2, {HD} and D2 of the C1Πu electronic state of H2 into the vibrational continuum of the ground X1Σ +g state are calculated as a function of the emission wavelength. The fluorescent spectra of {HD} in the Lyman system and of H2 in the Werner system resulting from an excitation source uniform in wavelength are predicted. The vibrational radiative lifetimes are tabulated as are the fractions of radiative decays that lead to dissociation. The effects of centrifugal distortion are discussed briefly. An appendix describes a sum rule used to check the numerical accuracy of the calculations. © 1972.},
